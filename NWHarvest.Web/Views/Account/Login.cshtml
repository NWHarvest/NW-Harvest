@using NWHarvest.Web.Models
@model LoginViewModel
@{
    ViewBag.Title = "Login";
}

<h2>@ViewBag.loginType @ViewBag.Title </h2>
<div class="row">
    <div class="col-md-6">
        <section id="loginForm">
            @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl, loginType = ViewBag.loginType }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "e-mail address" })
                        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-10">
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "password" })
                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                    </div>
                    <div class="col-md-10">
                        @Html.ActionLink("Forgot your password?", "ForgotPassword")
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-10">                        
                        @Html.CheckBoxFor(m => m.RememberMe)
                        @Html.LabelFor(m => m.RememberMe)
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-10">
                        <input type="submit" value="Log in" class="btn btn-primary" />
                    </div>
                </div>
            }
        </section>
    </div>
    <div class="col-md-6">
        <div class="col-md-12">
            <h3>Growing Connections</h3>
        </div>
    <div class="col-md-12">
        Growing Connections is a project to encourage and empower food programs to grow connections with local farmers and community
        members in order to increase the amount and variety of fresh local produce available to the food insecure.
    </div>
    <div class="col-md-12">
        &nbsp;
    </div>
        <div class="col-md-12">
            Need an account? @Html.ActionLink("Register", "Register", new { area = "" }, new { @class = "btn btn-primary" })
        </div>
        &nbsp;
        <div class="col-md-12">
            If you have questions, or encounter problems, please send an email to <a href="mailto:growing-connections@northwestharvest.org?Subject=Growing%20Connections">growing-connections@northwestharvest.org.</a>
        </div>
    </div>

</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}