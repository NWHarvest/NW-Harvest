@using NWHarvest.Web.Enums
@model NWHarvest.Web.ViewModels.AdministratorViewModel

@{
    ViewBag.Title = "Administrator";
}

<h2>Administrator</h2>

<div class="container-fluid">
    <div class="row">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h4>Users <span class="badge">@Model.NumberOfUsers</span></h4>
            </div>
            <div class="panel-body">
                <table class="table table-hover table-responsive dataTables_scroll" id="userTable">
                    <thead>
                        <tr>
                            <th>User Type</th>
                            <th>Total</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tr>
                        <td>Growers</td>
                        <td>@Model.NumberOfGrowers</td>
                        <td>@Html.ActionLink("Manage", "ManageUser", new { UserRole = UserRole.Grower }, new { @class="" })</td>
                    </tr>
                </table>
            </div>
        </div>
    </div>
    <hr />
    <div class="row">
        <div class="col-md-12">
            <h4>Listings</h4>
            @*@Html.Partial("_AdministratorTableListing", Model.Listings)*@
        </div>
    </div>
</div>