@model NWHarvest.Web.ViewModels.PickupLocationViewModel

@{
    ViewBag.Title = $"{Model.UserName} Pickup Location Detail";
    ViewBag.NavBarTitle = ViewBag.Title;
}

<h3>@ViewBag.Title</h3>
<hr />
<div class="container-fluid">
    <div class="row">
        <div class="col-xs-12 card">
            <div class="card-body">
                <h4 class="card-title">@Model.Name</h4>
                @Html.Partial("_Address", @Model.Address)
                <div>Comments: @Model.Comments</div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-12">
            <div class="card-body">
                <h4 class="card-title">
                    @Html.ActionLink("Edit", "Edit", "PickupLocations", new { Id = Model.Id }, new { @class = "btn btn-primary btn-sm" })
                    @Html.ActionLink("Delete", "Delete", "PickupLocations", new { Id = Model.Id }, new { @class = "btn btn-danger btn-sm" })
                    @Html.ActionLink("Back", "Manage", "PickupLocations", null, new { @class = "btn btn-default btn-sm" })
                </h4>
            </div>
        </div>
    </div>
</div>