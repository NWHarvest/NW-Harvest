@model NWHarvest.Web.ViewModels.PickupLocationViewModel

@{
    ViewBag.Title = "Delete Pickup Location";
    ViewBag.NavBarTitle = ViewBag.Title;
}

<h2>@Model.UserName</h2>
<hr />
<div>Are you sure you want to delete this location?</div>
<div class="container-fluid">
    <div class="row">
        <div class="col-xs-12 card">
            <div class="card-body">
                <h4 class="card-title">@Model.Name</h4>
                @Html.Partial("_Address", @Model.Address)
                <div>Comments: @Model.Comments</div>
            </div>
        </div>
    </div>
    <br />
    <div class="row">
        <div class="col-xs-12">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                @Html.HiddenFor(model => model.Id)
                @Html.ValidationSummary()
                <div class="form-actions no-color">
                    <input type="submit" value="Delete" class="btn btn-danger" />
                    @Html.ActionLink("Cancel", "Manage", "PickupLocations", null, new { @class = "btn btn-default" })
                </div>
            }
        </div>
    </div>
</div>