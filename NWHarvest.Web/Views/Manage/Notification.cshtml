@model NWHarvest.Web.ViewModels.NotificationViewModel

@{
    ViewBag.Title = "Update Notification";
}

<h2>@ViewBag.Title</h2>
<h3>@Model.UserName</h3>
<hr />

@using (Html.BeginForm("Notification", "Manage", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.Message)
    <div class="form-group">
        @Html.LabelFor(m => m.Method, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.EnumDropDownListFor(m => m.Method,"Select Preference", new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Method, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-success" value="Update" />
            @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-default" })
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
